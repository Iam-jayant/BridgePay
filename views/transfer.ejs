<%- layout("/layouts/boilerplate") %>

<!-- Send Remittance Form -->
<div class="container text-center">
    <h2 class="mb-4">Send Stablecoins</h2>
    <form id="sendForm">
        <div class="mb-3">
            <input type="text" id="receiver" class="form-control" placeholder="Receiver Address" required>
        </div>
        <div class="mb-3">
            <input type="number" id="amount" class="form-control" placeholder="Amount" required>
        </div>
        <div class="mb-3">
            <select id="currency" class="form-select">
                <option value="ETH">ETH</option>
            </select>
        </div>
        <button type="submit" class="btn btn-custom w-100">Send</button>
    </form>

    <p id="transactionStatus" class="mt-3 text-info"></p>
</div>

<!-- Link external script -->
<script src="/js/transfer.js"></script>
